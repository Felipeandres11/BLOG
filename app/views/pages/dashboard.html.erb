

<h1>Administracion de Usuarios </h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Email</th>
      <th>Nombre</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
       <td><%= link_to 'Editar', page_path(user), class: 'btn btn-sm btn-success' %></td>

        <td>
          <% if can? :destroy, user%>
            <%= link_to 'Eliminar', page_path(user), method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar el Post?' }, class: 'btn btn-sm btn-danger' %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

